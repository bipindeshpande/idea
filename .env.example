# Startup Idea Advisor - Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/startup_idea_advisor

# SQLite (default for development)
# DATABASE_URL=sqlite:///startup_idea_advisor.db

# =============================================================================
# API KEYS - REQUIRED
# =============================================================================
# OpenAI API Key (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional - for Claude validation, falls back to OpenAI if not set)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# VALIDATION MODEL CONFIGURATION
# =============================================================================
# Which model provider to use for validation: "openai" or "claude"
VALIDATION_MODEL_PROVIDER=claude

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Stripe Secret Key (for payment processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Webhook Secret (for verifying webhook events)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email provider: "resend", "sendgrid", or "smtp"
EMAIL_PROVIDER=resend

# Email settings
EMAIL_ENABLED=true
FROM_EMAIL=noreply@ideabunch.com
FROM_NAME=Startup Idea Advisor
REPLY_TO_EMAIL=support@ideabunch.com

# Resend API Key (if using Resend)
RESEND_API_KEY=re_your_resend_api_key_here

# SendGrid API Key (if using SendGrid)
# SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# SMTP Settings (if using SMTP)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Flask Environment: "development" or "production"
FLASK_ENV=development

# Debug Mode: "true" or "false"
DEBUG=true

# Server Port (default: 8000)
PORT=8000

# Secret Key for Flask sessions (generate a new one for production!)
SECRET_KEY=your_secret_key_here_generate_with_secrets_token_hex_32

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# Admin Email (for admin panel access)
ADMIN_EMAIL=admin@ideabunch.com

# Admin Password (change in production!)
ADMIN_PASSWORD=admin2024

# Admin MFA Secret (optional - for two-factor authentication)
ADMIN_MFA_SECRET=JBSWY3DPEHPK3PXP
